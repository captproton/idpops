<% form_for @user do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.label :username %><br />
    <%= f.text_field :username, :size => '30', :class => 'text' %>
</fieldset>
  <fieldset>
    <%= f.label :email %> <br />
    <%= f.text_field :email, :size => '30', :class => 'text' %>
</fieldset>
  <fieldset>
    <%= f.label :password %><br />
    <%= f.password_field :password, :size => '30', :class => 'text' %>
</fieldset>
  <fieldset>
    <%= f.label :password_confirmation, "RE-ENTER PASSWORD" %><br />
    <%= f.password_field :password_confirmation, :size => '30', :class => 'text' %>
</fieldset>
<fieldset>
  <input class="confirmation checkbox" id="confirm_terms" name="confirm_terms" value="1" type="checkbox">
  <label class="checkbox" for="confirm_terms">I accept the <a href="/terms-of-use" onclick="window.open(this.href,'width=1040,height=510,scrollbars=yes','width=1040,height=510,scrollbars=yes');return false;">Terms of Use</a></label>
</fieldset>
<br>

<div class="buttons">

 	<input class="button submit" name="commit" value="Sign me up!" type="submit">
    </div>
<% end %>
