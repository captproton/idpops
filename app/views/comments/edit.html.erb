<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :believer_id %><br />
    <%= f.text_field :believer_id %>
  </p>
  <p>
    <%= f.label :words %><br />
    <%= f.text_area :words %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @comment %> |
<%= link_to 'Back', comments_path %>