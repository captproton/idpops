<h1>New idea</h1>

<% form_for @idea, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
<p>
	<%= f.label :deadline %>
	<%= f.date_select(:deadline, :order => [:month, :day, :year]) %>
</p>

<p>
	<%= f.file_field :photo %>
</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', ideas_path %>